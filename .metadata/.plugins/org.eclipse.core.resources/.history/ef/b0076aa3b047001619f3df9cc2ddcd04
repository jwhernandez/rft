    public void actionPerformed(ActionEvent e) {        }
        if (e.getSource()==Ambiente1) {
            getContentPane().setBackground(new Color(255,0,0));
        }
        if (e.getSource()==Ambiente2) {
        	texto1=new JLabel("¡Esto es verde!");
        	add(texto1);
